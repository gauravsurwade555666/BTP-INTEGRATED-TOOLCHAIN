{
  "name": "BTP-INTEGRATED-TOOLCHAIN",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "1.15.3",
    "@cap-js/hana": "2.2.0",
    "@cap-js/sdm": "1.7.0",
    "@sap/cds": "^9",
    "@sap/xssec": "4.9.1",
    "axios": "1.11.0",
    "cfenv": "1.2.4",
    "express": "^4",
   
    "hdb": "2.25.1",
    "node-cron": "^4.2.1",
    "passport": "0.7.0",
    "xlsx": "0.18.5"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "enablessh": "cf enable-ssh BTP-INTEGRATED-TOOLCHAIN-srv",
    "cfrestart": "cf restart BTP-INTEGRATED-TOOLCHAIN-srv",
    "ssh": "cf ssh BTP-INTEGRATED-TOOLCHAIN-srv",
    "startssh": "cf ssh -N -L 9229:127.0.0.1:9229 BTP-INTEGRATED-TOOLCHAIN-srv",
    "watch-fiorimodule": "cds watch --open fiorimodule/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy BTP-INTEGRATED-TOOLCHAIN --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "cov2ap": {
      "plugin": true
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "server": {
      "body_parser": {
        "limit": "100mb"
      }
    },
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "impl": "@cap-js/sqlite",
          "credentials": {
            "url": ":memory:"
          }
        },
        "[production]": {
          "kind": "hana",
          "impl": "@cap-js/hana",
          "deploy-format": "hdbtable"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "[test]": {
        "db": {
          "kind": "sql"
        },
        "auth": {
          "strategy": "mock",
          "users": {
            "dev": {
              "password": "del",
              "roles": []
            }
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/fiorimodule"
  ]
}
